.container
  = render partial: "shared/header"
  .projects-show
    .projects-show--header
      .projects-show--header__job-type
        %span.icon-job-type
          = @product.job_type
      .projects-show--header__title
        %h1
          = @product.title
      %h2.projects-show--header__company-name
        %span.company-logo
          = image_tag @product.company.logo
        %p.company-name
          = @product.company.name
      .projects-show--header__image
        = image_tag @product.image
    .projects-show--body
      .projects-show--body--main
        .projects-show--body--main__members
          .section-title
            %h3
              = @product.company.name + 'のメンバー'
            %span.members-btn 全員みる
            %ul.members
              - @members.each do |member|
                = render partial: "members/member", locals: {member: member }
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 なにをやっているのか
            .section-body
              %ul.section-images
                %li
                  = image_tag @product.what_products[0].image1
                %li
                  = image_tag @product.what_products[0].image2
              %p
                = @product.what_products[0].what1
              %p
                = @product.what_products[0].what2
              %p
                = @product.what_products[0].what3
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 なぜやるのか
            .section-body
              %ul.section-images
                %li
                  = image_tag @product.why_products[0].image1
                %li
                  = image_tag @product.why_products[0].image2
              %p
                = @product.why_products[0].why1
              %p
                = @product.why_products[0].why2
              %p
                = @product.why_products[0].why3
        .descriptions
          %section.projects-show-main-section
            %header
              %h3 どうやっているのか
            .section-body
              %ul.section-images
                %li
                  = image_tag @product.how_products[0].image1
                %li
                  = image_tag @product.how_products[0].image2
              %p
                = @product.how_products[0].how1
              %p
                = @product.how_products[0].how2
              %p
                = @product.how_products[0].how3
      .projects-show--body--side
        .projects-show--body--side__action-btn
          .entry-btn
            %span 話を聞きに行きたい
          .entry-count
            %p 現在64人がエントリー済み
            %p エントリー状況は他のユーザーに公開されません
          .help-btn
            %span クリックすると何がおきるの？
          .bookmark-btn
            %span あとで見る
        .projects-show--body--side__map
          %h4 地図
          %p.address
            = @product.company.address
          .map-container
            %iframe{src: "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3241.681310220977!2d139.72693971541952!3d35.66022268019926!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb64822016fa5e709!2z5qCq5byP5Lya56S-44Oh44Or44Kr44Oq!5e0!3m2!1sja!2sjp!4v1487764562296"}
  = render partial: "shared/footer"
